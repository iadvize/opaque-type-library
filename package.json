  "devDependencies": {
    "@iadvize-oss/eslint-config": "^2.2.0",
    "@iadvize-oss/eslint-config-jest": "^1.2.1",
    "@types/jest": "^26.0.22",
    "eslint": "^7.23.0",
    "jest": "^26.6.3",
    "rollup": "^2.44.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.5.4",
